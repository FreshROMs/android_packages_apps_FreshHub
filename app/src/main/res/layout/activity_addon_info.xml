<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:foreground="@drawable/rounded_corner_bottom">

        <include layout="@layout/toolbar_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:foreground="@drawable/rounded_corner_top"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/addon_list_item"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layoutDirection="locale">

                        <FrameLayout
                            android:id="@+id/addon_list_item_image"
                            android:layout_width="wrap_content"
                            android:layout_height="82.0dip"
                            android:layout_marginStart="24.0dip"
                            android:layout_marginLeft="24.0dip"
                            android:layout_marginEnd="16.0dip"
                            android:layout_marginRight="16.0dip"
                            android:duplicateParentState="true">

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:animateLayoutChanges="true">

                                <com.google.android.material.card.MaterialCardView
                                    android:layout_width="60.0dip"
                                    android:layout_height="60.0dip"
                                    android:elevation="12dp"
                                    app:cardBackgroundColor="@android:color/transparent"
                                    app:cardCornerRadius="15.0dip">

                                    <ImageView
                                        android:id="@+id/addon_info_thumbnail"
                                        android:layout_width="60.0dip"
                                        android:layout_height="60.0dip"
                                        android:adjustViewBounds="true"
                                        android:scaleType="fitXY"
                                        android:src="@mipmap/ic_launcher" />
                                </com.google.android.material.card.MaterialCardView>
                            </FrameLayout>
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/addon_list_item_image"
                            android:orientation="vertical"
                            android:paddingEnd="8dp">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="0.0dip"
                                    android:layout_height="82.0dip"
                                    android:layout_weight="1.0"
                                    android:gravity="center_vertical"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:id="@+id/addon_info_container"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:gravity="center_vertical"
                                        android:orientation="vertical"
                                        android:paddingEnd="24dp">

                                        <com.google.android.material.textview.MaterialTextView
                                            android:id="@+id/title"
                                            style="?textAppearanceHeadline6"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:ellipsize="end"
                                            android:paddingEnd="24dp"
                                            android:singleLine="true"
                                            android:text="Addon Name"
                                            android:textDirection="locale"
                                            android:textSize="20.0sp" />

                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:paddingEnd="24dp">

                                            <com.google.android.material.textview.MaterialTextView
                                                android:id="@+id/version_number"
                                                style="?textAppearanceCaption"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:singleLine="true"
                                                android:text="Last update"
                                                android:textSize="14.0sp" />

                                            <com.google.android.material.textview.MaterialTextView
                                                android:id="@+id/package_name"
                                                style="?android:attr/textAppearanceSmall"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:singleLine="true"
                                                android:text="Last update"
                                                android:textSize="12.0sp" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="24dp"
                        android:fillViewport="true"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            style="?textAppearanceHeadline6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:singleLine="false"
                            android:text="Description"
                            android:textSize="18.0sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/addon_information_description"
                            style="?textAppearanceBody2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="24dp"
                            android:layout_marginTop="12.0dip"
                            android:singleLine="false"
                            android:text="@string/available_changelog_content"
                            android:textColor="@color/ota_changelog_text_color" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/sesl_primary_color"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/addon_info_install_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                style="?textAppearanceHeadline6"
                android:layout_width="match_parent"
                android:layout_height="54.0dip"
                android:gravity="center"
                android:singleLine="false"
                android:text="@string/install"
                android:textColor="@color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/addon_info_progress"
            android:layout_width="match_parent"
            android:layout_height="54.0dip"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/sesl_primary_dark_color"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="54.0dip"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <ProgressBar
                        android:id="@+id/addon_download_progress"
                        style="@style/addon_detail_progressbar"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="18.0dip"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            style="?textAppearanceHeadline6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/downloading"
                            android:textColor="@color/white"
                            android:textDirection="locale"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/addon_download_size"
                                style="?android:attr/textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="0MB"
                                android:textColor="@color/sesl_secondary_color"
                                android:textDirection="locale"
                                android:textSize="12sp" />

                            <com.google.android.material.textview.MaterialTextView
                                style="?android:attr/textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" / "
                                android:textColor="@color/sesl_secondary_color"
                                android:textDirection="locale"
                                android:textSize="12sp" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/addon_download_total"
                                style="?android:attr/textAppearanceSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0MB"
                                android:textColor="@color/sesl_secondary_color"
                                android:textDirection="locale"
                                android:textSize="12sp" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_marginEnd="18.0dip">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="end"
                            android:background="?selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_addon_cancel"
                                app:tint="@color/white" />
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
