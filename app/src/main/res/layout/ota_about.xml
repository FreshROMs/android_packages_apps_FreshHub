<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foreground="@drawable/rounded_corner_bottom">

    <include layout="@layout/toolbar_layout"
        app:layout_scrollFlags="scroll|enterAlwaysCollapsed"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout android:orientation="vertical"
                android:id="@+id/app_info_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ScrollView android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:fillViewport="true">

                    <LinearLayout android:gravity="top|center_horizontal"
                        android:orientation="vertical"
                        android:id="@+id/upper_layout"
                        android:paddingTop="64.0dip"
                        android:paddingBottom="24.0dip"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textSize="40.0sp"
                            android:textColor="@color/ota_changelog_text_color"
                            android:id="@+id/app_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10.0dip"
                            android:text="@string/app_name"
                            android:fontFamily="sans-serif-light" />
                        <TextView
                            android:textSize="16.0sp"
                            android:textStyle="normal"
                            android:textColor="@color/sesl_radiobutton_text_color"
                            android:gravity="center"
                            android:id="@+id/version"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8.0dip"
                            android:text="Version" />


                        <LinearLayout android:gravity="bottom|center"
                            android:orientation="vertical"
                            android:id="@+id/lower_layout"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="12.0dip">

                            <com.google.android.material.button.MaterialButton
                                style="@style/ButtonStyle.Invert.Secondary"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="12.0dip"
                                android:ellipsize="end"
                                android:focusable="true"
                                android:maxLines="2"
                                android:text="Open-source Licenses"
                                android:textSize="16.0sp"
                                android:textStyle="bold"
                                android:background="@color/sesl_btn_secondary_color_state"
                                android:foreground="@drawable/sesl_btn_secondary_inverse_background" />

                        </LinearLayout>
                    </LinearLayout>

                </ScrollView>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
        </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>