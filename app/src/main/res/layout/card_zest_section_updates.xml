<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/zest_layout_hdr_effect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="start|center_vertical"
        android:onClick="openZestSwUpdate"
        android:orientation="horizontal"
        android:paddingVertical="1dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:layout_marginStart="24dp"
            android:layout_weight="1"
            android:gravity="center_vertical|start"
            android:orientation="horizontal"
            android:paddingEnd="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="12dp">

                <com.google.android.material.textview.MaterialTextView
                    style="?textAppearanceBody1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_settings_plugin_title"
                    android:textAlignment="viewStart"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/zest_update_badge"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/new_badge_bg"
            android:fontFamily="sec-roboto-light"
            android:gravity="center"
            android:text="N"
            android:textColor="@color/white"
            android:textSize="11dp"
            android:textStyle="bold" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>