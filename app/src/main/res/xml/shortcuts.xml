<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <shortcut
        android:enabled="true"
        android:icon="@drawable/launcher_shortcut_zest"
        android:shortcutId="zest_fresh_settings"
        android:shortcutLongLabel="@string/system_settings_zest_plugin_title"
        android:shortcutShortLabel="@string/system_settings_zest_plugin_title">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="de.dlyt.yanndroid.fresh.settings.FreshSettingsActivity"
            android:targetPackage="de.dlyt.yanndroid.fresh" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

    <shortcut
        android:enabled="true"
        android:icon="@drawable/launcher_shortcut_reboot"
        android:shortcutId="reboot_shortcut"
        android:shortcutLongLabel="@string/reboot"
        android:shortcutShortLabel="@string/reboot">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetClass="de.dlyt.yanndroid.fresh.hub.shortcuts.ShortcutRebootDialog"
            android:targetPackage="de.dlyt.yanndroid.fresh" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

</shortcuts>