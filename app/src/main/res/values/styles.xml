<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="SamsungTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/background_color</item>
        <item name="android:statusBarColor">@color/background_color</item>
        <item name="android:navigationBarColor">@color/background_color</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>

        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorSecondary">@color/secondary_color</item>

        <item name="android:theme">@style/SamsungStyleMain</item>
    </style>

    <style name="SystemPreference" parent="SamsungStyleMain">
        <item name="colorPrimary">@color/default_primary_color</item>
        <item name="colorSecondary">@color/default_secondary_color</item>
        <item name="colorPrimaryDark">@color/default_primary_dark_color</item>
    </style>

    <style name="LargeProgressDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="SpinnerDialogStyle">
        <item name="android:dialogCornerRadius" tools:targetApi="p">26dp</item>
    </style>

    <!--Transparent Activity-->
    <style name="Theme.MaterialComponents.Transparent.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--Progress Bar Button-->
    <style name="addon_list_btn">
        <item name="android:background">@drawable/addons_small_btn</item>
        <item name="android:padding">4.5dip</item>
        <item name="android:layout_width">24.0dip</item>
        <item name="android:layout_height">24.0dip</item>
        <item name="android:src">@drawable/ic_addons_list_btn_cancel</item>
        <item name="android:tint">@color/raised_button_text_color</item>
    </style>

    <style name="addon_detail_progressbar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/addons_detail_progressbar</item>
    </style>

    <!--Others-->
    <style name="TextAppearance.Design.CollapsingToolbar.Expanded" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="TextAppearance.Widget.AppCompat.Toolbar.Title" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">sec-roboto-light</item>
    </style>
</resources>