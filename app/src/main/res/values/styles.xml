<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="SystemPreference" parent="SamsungStyleMain">
        <item name="colorPrimary">@color/default_primary_color</item>
        <item name="colorSecondary">@color/default_secondary_color</item>
        <item name="colorPrimaryDark">@color/default_primary_dark_color</item>
    </style>

    <!--Dialog-->
    <style name="AlertDialogStyle" parent="android:Theme.DeviceDefault.Light.Dialog.Alert" />

    <style name="LargeProgressDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="SpinnerDialogStyle">
        <item name="android:dialogCornerRadius" tools:targetApi="p">26dp</item>
    </style>

    <!--Transparent Activity-->
    <style name="Theme.MaterialComponents.Transparent.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="materialButtonStyle">@style/ButtonStyle</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--Progress Bar Button-->
    <style name="addon_list_btn">
        <item name="android:background">@drawable/addons_small_btn</item>
        <item name="android:padding">4.5dip</item>
        <item name="android:layout_width">24.0dip</item>
        <item name="android:layout_height">24.0dip</item>
        <item name="android:src">@drawable/ic_addons_list_btn_cancel</item>
        <item name="android:tint">@color/raised_button_text_color</item>
    </style>

    <style name="addon_detail_progressbar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/addons_detail_progressbar</item>
    </style>




    <!--Relative Card-->
    <style name="sec_relative_link_title">
        <item name="android:textSize">18.0sp</item>
        <item name="android:textColor">@color/ota_swupdate_new_title_textcolor</item>
        <item name="android:fontFamily">sec-roboto-light</item>
    </style>
    <style name="sec_relative_link_button">
        <item name="android:textSize">16.0sp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">?colorPrimary</item>
        <item name="android:fontFamily">sec-roboto-light</item>
        <item name="android:background">@drawable/sesl_relative_card_text_ripple_bg</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">6dp</item>
        <item name="android:radius">26dp</item>
    </style>


    <!--Others-->
    <style name="TextAppearance.Design.CollapsingToolbar.Expanded" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="TextAppearance.Widget.AppCompat.Toolbar.Title" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">sec-roboto-light</item>
    </style>
</resources>